                  {
                    "padding_2": {
                      "type": "panel",
                      "size": [ 2, "100%" ]
                    }
                  },
                  {
                    "coin_icon@common_store.coin_icon": {
                      "layer": 5,
                      "bindings": [
                        {
                          "binding_type": "collection",
                          "binding_name": "#offer_coin_visible",
                          "binding_collection_name": "list_collection",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "padding_3": {
                      "type": "panel",
                      "size": [ 1, "100%" ]
                    }
                  },
                  {
                    "offer_price_panel": {
                      "type": "panel",
                      "size": [ "100%c", 12 ],
                      "controls": [
                        {
                          "offer_price": {
                            "type": "label",
                            "color": [ 0.8823529, 0.8509803, 0.02352941 ],
                            "size": [ "default", 10 ],
                            "offset": [ 0, -1 ],
                            "text": "#offer_price",
                            "font_type": "smooth",
                            "shadow": true,
                            "layer": 4,
                            "bindings": [
                              {
                                "binding_type": "collection",
                                "binding_name": "#offer_price",
                                "binding_collection_name": "list_collection"
                              }
                            ]
                          }
                        }
                      ],
                      "bindings": [
                        {
                          "binding_type": "collection_details",
                          "binding_collection_name": "list_collection"
                        },
